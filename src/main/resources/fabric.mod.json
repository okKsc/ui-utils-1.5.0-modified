{
  "schemaVersion": 1,
  "id": "uiutils",
  "version": "${version}",

  "name": "UI Utils",
  "description": "Dupe hunting mod.",
  "authors": [
    "Coderx_Gamer",
    "MrBreakNFix"
  ],
  "contact": {
    "homepage": "https://ui-utils.com",
    "sources": "https://github.com/Coderx-Gamer/ui-utils"
  },

  "license": "GPL-3.0",
  "icon": "assets/uiutils/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "org.uiutils.MainClient"
    ]
  },
  "mixins": [
    "uiutils.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.15.0",
    "fabric": "*",
    "minecraft": "~1.20",
    "java": ">=17"
  },

  "accessWidener": "uiutils.accesswidener",

  "suggests": {
    "another-mod": "*"
  },

  "custom": {
    "modmenu:clientsideOnly": true,
    "modmenu:api": false
  }
}
